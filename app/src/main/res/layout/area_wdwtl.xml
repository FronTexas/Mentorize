<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivDiamond"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/diamond_icon"
        android:layout_centerHorizontal="true" />

    <com.example.fron.customviews.MyTextView
        android:id="@+id/tvWdywtlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:typeface="roboto_bold_italic"
        android:text="What do you want to learn?"
        android:textSize="17sp"
        android:layout_below="@+id/ivDiamond"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/llWdwtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignLeft="@id/tvWdywtlText"
        android:layout_below="@id/tvWdywtlText"></LinearLayout>


</RelativeLayout>